@page "{id:int}"
@model CityBreaks.Web.Pages.EditPropertyModel

<h2>Editar Propriedade</h2>

<form method="post">
    <input type="hidden" asp-for="PropertyToEdit.Id" />

    <div>
        <label asp-for="PropertyToEdit.Name"></label>
        <input asp-for="PropertyToEdit.Name" />
        <span asp-validation-for="PropertyToEdit.Name"></span>
    </div>

    <div>
        <label asp-for="PropertyToEdit.PricePerNight"></label>
        <input asp-for="PropertyToEdit.PricePerNight" type="number" step="0.01" />
        <span asp-validation-for="PropertyToEdit.PricePerNight"></span>
    </div>

    <div>
        <label asp-for="PropertyToEdit.CityId"></label>
        <select asp-for="PropertyToEdit.CityId" asp-items="Model.CitiesSelectList">
            <option value="">-- Selecione a cidade --</option>
        </select>
        <span asp-validation-for="PropertyToEdit.CityId"></span>
    </div>

    <button type="submit">Salvar</button>
</form>

<form method="post" asp-page-handler="Delete" asp-route-id="@Model.PropertyToEdit.Id"
      onsubmit="return confirm('Confirma exclusão?');" style="margin-top:20px;">
    <button type="submit" style="background-color: #c00; color: white;">Excluir</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
